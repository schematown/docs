{
  "name": "docs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "install:hooks": "lefthook install",
    "commit": "commit",
    "format:check:prettier": "prettier --check .",
    "format:fix:prettier": "prettier --write .",
    "format:check": "run-s format:check:*",
    "format:fix": "run-s format:fix:*",
    "lint:check:eslint": "eslint .",
    "lint:fix:eslint": "eslint . --fix",
    "lint:check": "run-s lint:check:*",
    "lint:fix": "run-s lint:fix:*",
    "fix": "run-s *:fix",
    "declutter": "knip --no-exit-code",
    "dev": "vitepress dev --port 3000",
    "build": "vitepress build",
    "preview": "vitepress preview",
    "clean": "rimraf node_modules .turbo .vitepress/cache .vitepress/dist",
    "pre-commit-tasks": "turbo format:check lint:check build",
    "ci:smoke-test": "turbo format:check lint:check build"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/prompt-cli": "^19.6.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "knip": "^5.39.4",
    "lefthook": "^1.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.18.0",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "vitepress": "^1.5.0"
  },
  "packageManager": "pnpm@9.12.1"
}
